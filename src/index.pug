mixin control
  form
    fieldset
      legend
        h3 Control panel
      div.control
        label Scale on/off
          input(type="checkbox").control__on-scale
        label Vertical on/off
          input(type="checkbox").control__on-vertical
        label Tooltip on/off
          input(type="checkbox").control__on-tooltip
        label Range mode
          input(type="checkbox").control__on-range
        label Minimum value
          input(type="number").control__min-value
        label Maximum value
          input(type="number").control__max-value
        label Step size value
          input(type="number").control__step-size
        label Value from
          input(type="number").control__value-from
        label Value to
          input(type="number").control__value-to
        label Range value
          output(type="number").control__value-range

doctype html
html(lang="ru" dir="ltr")
  head
    meta(charset="utf-8")
    title Slider demo
  body
    div.container
      input(class="input-slider-plugin" data-min-value="0" data-max-value="8" data-value-from="4" data-value-to="7" data-step-size="1" data-on-scale="true" data-on-range="true" data-on-tooltip="true")
      +control
    div.container
      input(class="input-slider-plugin" data-min-value="0" data-max-value="50" data-value-from="10" data-value-to="7" data-on-scale="true" data-on-tooltip="true")
      +control
    div.container
      input(class="input-slider-plugin" data-min-value="0" data-max-value="100" data-value-from="15" data-value-to="45" data-on-range="true" data-on-tooltip="true")
      +control
    div.container
      input(class="input-slider-plugin" data-min-value="-100" data-max-value="10" data-step-size="0.1" data-value-to="7" data-on-vertical="false" data-on-tooltip="true")
      +control
    div.container
      input(class="input-slider-plugin" data-min-value="100" data-max-value="10000" data-value-from="300" data-value-to="7" data-step-size = "100" data-on-vertical="false")
      +control