{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "removeComments": false,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
